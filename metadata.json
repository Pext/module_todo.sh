{
  "id": "pext.module.todo",
  "name": "Todo List",
  "developer": "Sylvia van Os (Pext lead developer)",
  "description": "Allows Pext to do todo.txt-style todo-list management",
  "homepage": "https://pext.hackerchick.me/",
  "license": "GPL-3.0+",
  "git_urls": [
    "https://github.com/Pext/pext_module_todo" 
  ],
  "settings": [{
    "name": "todo_file",
    "description": "Path to todo.txt",
    "default": "~/todo.txt"
  }, {
    "name": "done_file",
    "description": "Path to archive (done.txt)",
    "default": "~/done.txt"
  }],
  "platforms": [
    "Linux",
    "Darwin",
    "Windows"
  ]
}
